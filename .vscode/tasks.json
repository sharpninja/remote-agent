{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/tests/RemoteAgent.Service.Tests/RemoteAgent.Service.Tests.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-integration-tests",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/tests/RemoteAgent.Service.IntegrationTests/RemoteAgent.Service.IntegrationTests.csproj",
        "-c",
        "Debug",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run-integration-tests",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/tests/RemoteAgent.Service.IntegrationTests/RemoteAgent.Service.IntegrationTests.csproj",
        "-c",
        "Debug",
        "--no-build",
        "--verbosity",
        "normal",
        "-nologo"
      ],
      "problemMatcher": "$msCompile",
      "dependsOn": "build-integration-tests"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/tests/RemoteAgent.Service.Tests/RemoteAgent.Service.Tests.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/tests/RemoteAgent.Service.Tests/RemoteAgent.Service.Tests.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
