    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceBrush}" />
    </Style>

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="Shell.ForegroundColor" Value="{StaticResource OnSurfaceBrush}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource OnSurfaceBrush}" />
        <Setter Property="Shell.DisabledColor" Value="{StaticResource OnSurfaceVariantBrush}" />
        <Setter Property="Shell.UnselectedColor" Value="{StaticResource OnSurfaceVariantBrush}" />
        <Setter Property="Shell.NavBarHasShadow" Value="False" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource SurfaceContainerHighBrush}" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource OnSurfaceVariantBrush}" />
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="BarTextColor" Value="{StaticResource OnSurfaceBrush}" />
        <Setter Property="IconColor" Value="{StaticResource PrimaryBrush}" />
    </Style>

    <Style TargetType="TabbedPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource SurfaceContainerHighBrush}" />
        <Setter Property="BarTextColor" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="UnselectedTabColor" Value="{StaticResource OnSurfaceVariantBrush}" />
        <Setter Property="SelectedTabColor" Value="{StaticResource PrimaryBrush}" />
    </Style>

</ResourceDictionary>
