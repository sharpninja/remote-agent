<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RemoteAgent.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RemoteAgent.App"
    Title="RemoteAgent.App"
    FlyoutBehavior="Flyout">

    <Shell.FlyoutContent>
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="10">
                <Label Text="Menu" FontSize="20" FontAttributes="Bold" />
                <Label Text="Open Sessions" FontAttributes="Bold" />
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding SessionItems}" Spacing="6">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="*,Auto">
                                <Button Text="{Binding Title}" HorizontalOptions="Fill"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type Shell}}, Path=BindingContext.SelectSessionCommand}"
                                        CommandParameter="{Binding SessionId}" />
                                <Button Grid.Column="1" Text="âœ•" WidthRequest="40"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type Shell}}, Path=BindingContext.TerminateSessionCommand}"
                                        CommandParameter="{Binding SessionId}" />
                            </Grid>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>
                <Button Text="Start Session" Command="{Binding StartSessionCommand}" />
                <Button Text="Settings" Command="{Binding NavigateToSettingsCommand}" />
                <Button Text="Account Management" Command="{Binding NavigateToAccountCommand}" />
            </VerticalStackLayout>
        </ScrollView>
    </Shell.FlyoutContent>

</Shell>
