        <VerticalStackLayout Padding="16" Spacing="10">
            <Label Text="Account Management" FontSize="24" FontAttributes="Bold" />
            <Label Text="Manage authentication profile, account details, and permissions." TextColor="{StaticResource IconTintMutedBrush}" />
