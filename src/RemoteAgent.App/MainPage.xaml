<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:RemoteAgent.App.Converters"
             xmlns:vm="clr-namespace:RemoteAgent.App.ViewModels"
             x:Class="RemoteAgent.App.MainPage"
             x:Name="ThisPage"
             Title="Remote Agent"
             BackgroundColor="{StaticResource SurfaceBrush}">
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="File">
            <MenuFlyoutItem Text="New Session" Command="{Binding NewSessionCommand}" />
            <MenuFlyoutItem Text="Terminate Session" Command="{Binding TerminateCurrentSessionCommand}" />
            <MenuFlyoutItem Text="Disconnect" Command="{Binding DisconnectCommand}" />
        </MenuBarItem>
        <MenuBarItem Text="Connection">
            <MenuFlyoutItem Text="Connect" Command="{Binding ConnectCommand}" />
            <MenuFlyoutItem Text="Disconnect" Command="{Binding DisconnectCommand}" />
        </MenuBarItem>
        <MenuBarItem Text="Message">
            <MenuFlyoutItem Text="Send" Command="{Binding SendMessageCommand}" />
            <MenuFlyoutItem Text="Attach" Command="{Binding AttachCommand}" />
            <MenuFlyoutItem Text="Prompt Template" Command="{Binding UsePromptTemplateCommand}" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Connect" Command="{Binding ConnectCommand}" />
        <ToolbarItem Text="Disconnect" Command="{Binding DisconnectCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <converters:ChatMessageToHtmlSourceConverter x:Key="MessageToHtmlSource" />
        <converters:InverseBoolConverter x:Key="InverseBool" />
        <Style TargetType="Label" x:Key="IconLabel">
            <Setter Property="FontFamily" Value="fa-solid-900" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
        </Style>
        <Style TargetType="Label" x:Key="IconLabelSmall">
            <Setter Property="FontFamily" Value="fa-solid-900" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
        </Style>
    </ContentPage.Resources>

    <Grid>
        <!-- Connection-first view (mobile flow): shown before session is established -->
        <Grid IsVisible="{Binding IsConnected, Converter={StaticResource InverseBool}}" Padding="20">
            <Border Style="{StaticResource MaterialCard}" VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="12">
                    <Label Text="Connect to Server" FontSize="22" FontAttributes="Bold" />
                    <Label Text="Establish a session before entering chat." FontSize="13" TextColor="{StaticResource OnSurfaceVariantBrush}" />
                    <Entry Placeholder="Host (e.g. 10.0.2.2)"
                           AutomationId="mobile_connect_host"
                           Text="{Binding Host, Mode=TwoWay}"
                           PlaceholderColor="{StaticResource OnSurfaceVariantBrush}" />
                    <Picker AutomationId="mobile_connect_port"
                            ItemsSource="{x:Static vm:MainPageViewModel.AvailablePorts}"
                            SelectedItem="{Binding Port, Mode=TwoWay}"
                            Title="Port" />
                    <HorizontalStackLayout Spacing="8">
                    <Button AutomationId="mobile_scan_qr_button"
                            Text="Login"
                            Command="{Binding ScanQrCodeCommand}" />
                        <Button AutomationId="mobile_connect_button"
                                Text="Connect"
                                Command="{Binding ConnectCommand}" />
                    </HorizontalStackLayout>
                    <Label Text="{Binding Status}" FontSize="12" TextColor="{StaticResource OnSurfaceVariantBrush}" />
                </VerticalStackLayout>
            </Border>
        </Grid>

        <!-- Chat workspace view: shown after successful connection -->
        <Grid IsVisible="{Binding IsConnected}" RowDefinitions="Auto,Auto,*,Auto,Auto" Padding="16" RowSpacing="8">
        <!-- Session list + title (FR-11.1, TR-12.1.3) -->
        <Border Grid.Row="0" Style="{StaticResource MaterialCard}" Margin="0,0,0,4">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12"/>
            </Border.StrokeShape>
            <VerticalStackLayout Spacing="4">
                <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                    <Label Text="Sessions" FontAttributes="Bold" FontSize="13" VerticalOptions="Center" />
                    <Button x:Name="NewSessionBtn" Text="+ New" Command="{Binding NewSessionCommand}" Padding="8,2" FontSize="12" />
                    <Button Text="End" Command="{Binding TerminateCurrentSessionCommand}" Padding="8,2" FontSize="12" />
                </HorizontalStackLayout>
                <CollectionView x:Name="SessionTabsView"
                                HeightRequest="34"
                                ItemsSource="{Binding Sessions}"
                                SelectedItem="{Binding CurrentSession, Mode=TwoWay}"
                                SelectionMode="Single">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="8" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <HorizontalStackLayout Spacing="2">
                                <Border Padding="8,4" StrokeThickness="1" Stroke="{StaticResource OutlineBrush}" BackgroundColor="{StaticResource SurfaceBrush}">
                                    <Border.StrokeShape><RoundRectangle CornerRadius="6"/></Border.StrokeShape>
                                    <Label Text="{Binding Title}" FontSize="12" MaxLines="1" LineBreakMode="TailTruncation" />
                                </Border>
                                <Button Text="✕" FontSize="10"
                                        WidthRequest="24"
                                        HeightRequest="24"
                                        Padding="0"
                                        CornerRadius="12"
                                        Command="{Binding BindingContext.TerminateSessionCommand, Source={x:Reference ThisPage}}"
                                        CommandParameter="{Binding .}" />
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <HorizontalStackLayout Spacing="4" VerticalOptions="Center">
                    <Label Text="Session:" FontSize="12" TextColor="{StaticResource OnSurfaceVariantBrush}" VerticalOptions="Center" />
                    <Label Text="{Binding CurrentSessionTitle}" FontAttributes="Bold" VerticalOptions="Center" LineBreakMode="TailTruncation"
                           IsVisible="{Binding IsEditingTitle, Converter={StaticResource InverseBool}}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding BeginEditTitleCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Entry x:Name="SessionTitleEntry" Text="{Binding CurrentSessionTitleEditorText, Mode=TwoWay}"
                           IsVisible="{Binding IsEditingTitle}"
                           Unfocused="OnSessionTitleUnfocused" Completed="OnSessionTitleCompleted" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>
        <!-- M3 top card: connection (surface container, 12dp radius) — hidden when connected -->
        <Border Grid.Row="1" Style="{StaticResource MaterialCard}" Margin="0,0,0,8"
                IsVisible="{Binding IsConnected, Converter={StaticResource InverseBool}}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12"/>
            </Border.StrokeShape>
            <VerticalStackLayout Spacing="8">
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Style="{StaticResource IconLabelSmall}" Text="{StaticResource IconServer}"
                           TextColor="{StaticResource OnSurfaceVariantBrush}" VerticalOptions="Center" />
                    <Entry x:Name="HostEntry" Text="{Binding Host, Mode=TwoWay}" Placeholder="Host (e.g. 10.0.2.2)" WidthRequest="160"
                           PlaceholderColor="{StaticResource OnSurfaceVariantBrush}" />
                    <Label Style="{StaticResource IconLabelSmall}" Text="{StaticResource IconHashtag}"
                           TextColor="{StaticResource OnSurfaceVariantBrush}" VerticalOptions="Center" />
                    <Picker x:Name="PortPicker"
                            ItemsSource="{x:Static vm:MainPageViewModel.AvailablePorts}"
                            SelectedItem="{Binding Port, Mode=TwoWay}"
                            Title="Port" WidthRequest="90" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <HorizontalStackLayout Spacing="4">
                        <Label Style="{StaticResource IconLabel}" Text="{StaticResource IconPlug}"
                               TextColor="{StaticResource OnPrimaryBrush}" VerticalOptions="Center" />
                        <Button x:Name="ConnectBtn" Text="Connect" Command="{Binding ConnectCommand}" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="4">
                        <Label Style="{StaticResource IconLabel}" Text="{StaticResource IconPlugCircleXmark}"
                               TextColor="{StaticResource OnPrimaryBrush}" VerticalOptions="Center" />
                        <Button x:Name="DisconnectBtn" Text="Disconnect" Command="{Binding DisconnectCommand}" />
                    </HorizontalStackLayout>
                </HorizontalStackLayout>
                <VerticalStackLayout Spacing="4">
                    <Label Text="Per-request context (sent with each request)" FontSize="12" TextColor="{StaticResource OnSurfaceVariantBrush}" />
                    <Editor x:Name="RequestContextEditor" Text="{Binding PerRequestContext, Mode=TwoWay}"
                            Placeholder="Optional context that should be issued with every user request."
                            AutoSize="TextChanges"
                            MinimumHeightRequest="64" />
                </VerticalStackLayout>
            </VerticalStackLayout>
        </Border>

        <!-- Messages: M3 card-style bubbles; swipe left/right to archive -->
        <CollectionView x:Name="MessagesList" Grid.Row="2" SelectionMode="None" ItemsSource="{Binding Messages}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView IsVisible="{Binding IsArchived, Converter={StaticResource InverseBool}}">
                        <SwipeView.LeftItems>
                            <SwipeItems>
                                <SwipeItem Text="Archive" BackgroundColor="{StaticResource OutlineBrush}"
                                           Command="{Binding BindingContext.ArchiveMessageCommand, Source={x:Reference ThisPage}}"
                                           CommandParameter="{Binding .}">
                                    <SwipeItem.IconImageSource>
                                        <FontImageSource FontFamily="fa-solid-900" Glyph="{StaticResource IconBoxArchive}" Color="White" Size="16"/>
                                    </SwipeItem.IconImageSource>
                                </SwipeItem>
                            </SwipeItems>
                        </SwipeView.LeftItems>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Archive" BackgroundColor="{StaticResource OutlineBrush}"
                                           Command="{Binding BindingContext.ArchiveMessageCommand, Source={x:Reference ThisPage}}"
                                           CommandParameter="{Binding .}">
                                    <SwipeItem.IconImageSource>
                                        <FontImageSource FontFamily="fa-solid-900" Glyph="{StaticResource IconBoxArchive}" Color="White" Size="16"/>
                                    </SwipeItem.IconImageSource>
                                </SwipeItem>
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <Border Padding="12,8" Margin="0,4" StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.Triggers>
                            <DataTrigger TargetType="Border" Binding="{Binding IsUser}" Value="True">
                                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryContainerBrush}" />
                                <Setter Property="HorizontalOptions" Value="End" />
                            </DataTrigger>
                            <DataTrigger TargetType="Border" Binding="{Binding IsError}" Value="True">
                                <Setter Property="BackgroundColor" Value="{StaticResource ErrorContainerBrush}" />
                            </DataTrigger>
                            <DataTrigger TargetType="Border" Binding="{Binding IsEvent}" Value="True">
                                <Setter Property="BackgroundColor" Value="{StaticResource SurfaceContainerLowBrush}" />
                            </DataTrigger>
                            <MultiTrigger TargetType="Border">
                                <MultiTrigger.Conditions>
                                    <BindingCondition Binding="{Binding IsUser}" Value="False" />
                                    <BindingCondition Binding="{Binding IsEvent}" Value="False" />
                                    <BindingCondition Binding="{Binding IsError}" Value="False" />
                                </MultiTrigger.Conditions>
                                <MultiTrigger.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource SurfaceContainerHighBrush}" />
                                </MultiTrigger.Setters>
                            </MultiTrigger>
                        </Border.Triggers>
                        <Grid>
                            <Label Text="{Binding DisplayText}" IsVisible="False"
                                   TextColor="{StaticResource OnSurfaceBrush}">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsUser}" Value="True">
                                        <Setter Property="IsVisible" Value="True" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsEvent}" Value="True">
                                        <Setter Property="IsVisible" Value="True" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                            <WebView MinimumHeightRequest="24" HeightRequest="80"
                                     Source="{Binding ., Converter={StaticResource MessageToHtmlSource}}"
                                     VerticalOptions="Start" IsVisible="False"
                                     BackgroundColor="Transparent">
                                <WebView.Triggers>
                                    <MultiTrigger TargetType="WebView">
                                        <MultiTrigger.Conditions>
                                            <BindingCondition Binding="{Binding IsUser}" Value="False" />
                                            <BindingCondition Binding="{Binding IsEvent}" Value="False" />
                                        </MultiTrigger.Conditions>
                                        <MultiTrigger.Setters>
                                            <Setter Property="IsVisible" Value="True" />
                                        </MultiTrigger.Setters>
                                    </MultiTrigger>
                                </WebView.Triggers>
                            </WebView>
                        </Grid>
                        </Border>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Input: M3 outlined field row -->
        <Border Grid.Row="3" Stroke="{StaticResource OutlineBrush}" StrokeThickness="1" Padding="8,4" Margin="0,8,0,0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8"/>
            </Border.StrokeShape>
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="6">
                <Editor Grid.Column="0" x:Name="MessageEditor"
                        Placeholder="Message to agent..."
                        Text="{Binding PendingMessage, Mode=TwoWay}"
                        AutoSize="TextChanges"
                        MinimumHeightRequest="40"
                        PlaceholderColor="{StaticResource OnSurfaceVariantBrush}"
                        VerticalOptions="Center"
                        HorizontalOptions="Fill" />
                <HorizontalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                    <Button x:Name="AttachBtn" Command="{Binding AttachCommand}" Padding="8" MinimumHeightRequest="36" MinimumWidthRequest="36">
                        <Button.ImageSource>
                            <FontImageSource FontFamily="fa-solid-900" Glyph="{StaticResource IconPaperclip}" Color="{StaticResource OnPrimaryBrush}" Size="16"/>
                        </Button.ImageSource>
                    </Button>
                    <Button x:Name="SendBtn" Command="{Binding SendMessageCommand}" Padding="8" MinimumHeightRequest="36" MinimumWidthRequest="36">
                        <Button.ImageSource>
                            <FontImageSource FontFamily="fa-solid-900" Glyph="{StaticResource IconPaperPlane}" Color="{StaticResource OnPrimaryBrush}" Size="16"/>
                        </Button.ImageSource>
                    </Button>
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- Status: M3 label small, OnSurfaceVariant -->
        <HorizontalStackLayout Grid.Row="4" Spacing="6" Margin="0,8,0,0">
            <Label Style="{StaticResource IconLabelSmall}" Text="{StaticResource IconCircleInfo}"
                   TextColor="{StaticResource OnSurfaceVariantBrush}" VerticalOptions="Center" />
            <Label x:Name="StatusLabel" Text="{Binding Status}"
                   TextColor="{StaticResource OnSurfaceVariantBrush}" FontSize="12" VerticalTextAlignment="Center" />
        </HorizontalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
